<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arafat1419.simpletextcomposeapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SimpleTextComposeApp">
        <activity
            android:name=".ProfileCard"
            android:exported="true"
            android:label="@string/title_activity_profile_card"
            android:theme="@style/Theme.SimpleTextComposeApp.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LiftUpState"
            android:exported="true"
            android:label="@string/title_activity_lift_up_state"
            android:theme="@style/Theme.SimpleTextComposeApp.NoActionBar">

        </activity>
        <activity
            android:name=".DynamicContent"
            android:exported="true"
            android:label="@string/title_activity_dynamic_content"
            android:theme="@style/Theme.SimpleTextComposeApp.NoActionBar"></activity>
        <activity
            android:name=".CoreUI"
            android:exported="true"
            android:label="@string/title_activity_core_ui"
            android:theme="@style/Theme.SimpleTextComposeApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.SimpleTextComposeApp.NoActionBar" />
    </application>

</manifest>